
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">

                    <div class="card" style="width: 18rem; margin: 20px;">
                        <img class="card-img-top" width="200px" height="200px" style="object-fit: cover;" src="http://localhost:3000/getimage/{{this._id}}.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="#" class="btn btn-primary">add to cart</a>
                        </div>
                    </div>

                </div>
                {{/each}}
            </div>
        </div>
    </section>